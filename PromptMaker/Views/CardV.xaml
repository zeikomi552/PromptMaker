<mah:MetroWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PromptMaker.Views"
        xmlns:hlp="clr-namespace:MVVMCore.Common.Helpers;assembly=MVVMCore"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
        TitleCharacterCasing="Normal"
        xmlns:ViewModels="clr-namespace:PromptMaker.ViewModels" x:Class="PromptMaker.Views.CardV"
        mc:Ignorable="d"
        xmlns:Converters="clr-namespace:PromptMaker.Common.Converters"
        Title="CardV" Height="600" Width="800" hlp:DialogResultHelper.DialogResult="{Binding DialogResult, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
    <mah:MetroWindow.DataContext>
        <ViewModels:CardVM/>
    </mah:MetroWindow.DataContext>
    <Window.Resources>
        <Converters:StringToImageSourceConverter x:Key="StringToImageSourceConverter"/>
    </Window.Resources>
    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Loaded">
            <b:CallMethodAction TargetObject="{Binding}" MethodName="Init"/>
        </b:EventTrigger>
    </b:Interaction.Triggers>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="50*"/>
                <RowDefinition Height="50*"/>
                <RowDefinition Height="50*"/>
                <RowDefinition Height="50*"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal">
                <Button HorizontalAlignment="Left" Width="100" Margin="5" Content="ファイル">
                    <b:Interaction.Triggers>
                        <b:EventTrigger EventName="Click">
                            <b:CallMethodAction TargetObject="{Binding}" MethodName="OpenImageFile"/>
                        </b:EventTrigger>
                    </b:Interaction.Triggers>
                </Button>
                <Button HorizontalAlignment="Left" Width="100" Margin="5" Content="保存">
                    <b:Interaction.Triggers>
                        <b:EventTrigger EventName="Click">
                            <b:CallMethodAction TargetObject="{Binding}" MethodName="Save"/>
                        </b:EventTrigger>
                    </b:Interaction.Triggers>
                </Button>
            </StackPanel>
            <StackPanel Grid.Row="1">
                <StackPanel Orientation="Horizontal">
                    <TextBlock TextAlignment="Right" Width="90" Margin="5" Text="タイトル"/>
                    <TextBlock Margin="5" Text=":"/>
                    <TextBox Width="200" Margin="5" Text="{Binding Title, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock TextAlignment="Right" Width="90" Margin="5" Text="名前"/>
                    <TextBlock Margin="5" Text=":"/>
                    <TextBox Width="200" Margin="5" Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock TextAlignment="Right" Width="90" Margin="5" Text="説明"/>
                    <TextBlock Margin="5" Text=":"/>
                    <TextBox Width="200" Height="100" Margin="5" Text="{Binding Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <Grid Margin="5" Grid.Column="1">

            <Border x:Name="card_border" Width="320" Height="450" Margin="10" BorderThickness="5" CornerRadius="20" Background="#1c1c1c">
                <Border.BorderBrush>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#1c1c1c"/>
                        <GradientStop Color="#c0c0c0" Offset="1"/>
                    </LinearGradientBrush>
                </Border.BorderBrush>

                <Grid Margin="15">
                    <Grid.Background>
                        <RadialGradientBrush>
                            <GradientStop Color="#FF555979" Offset="1"/>
                            <GradientStop Color="White" Offset="0"/>
                        </RadialGradientBrush>
                    </Grid.Background>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="0.3*"/>
                    </Grid.RowDefinitions>

                    <TextBlock  Margin="10,5,5,5" Text="{Binding Title}" FontFamily="HGSMinchoE" FontSize="16"/>
                    <Border MinHeight="100" Margin="12,0,12,0" BorderBrush="#FFc0c0c0" BorderThickness="2" Grid.Row="1">
                        <Image Margin="-1" Source="{Binding ImagePath, Converter={StaticResource StringToImageSourceConverter}}"/>
                    </Border>
                    <TextBlock Grid.Row="2" Margin="10,5,5,5" Text="{Binding Name}" FontFamily="HGSMinchoE" FontSize="16"/>
                    <Border Margin="12,0,12,0" Grid.Row="3" BorderBrush="#FFc0c0c0" BorderThickness="2" Background="#2FDAD6D6">
                        <TextBlock VerticalAlignment="Center" Margin="5" Text="{Binding Description}" TextWrapping="Wrap"/>
                    </Border>
                    <Grid Grid.Row="4">

                        <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5,0,5,0" Text="Happy Programmer" Foreground="Silver" Grid.ColumnSpan="2" FontFamily="Segoe Script" FontSize="14"/>
                    </Grid>

                </Grid>
            </Border>
        </Grid>

    </Grid>
</mah:MetroWindow>
